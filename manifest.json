{
    "manifest_version": 2,
    "name": "Letterboxd Friends Rating Extension",
    "version": "1.0",
    "description": "Displays movie average rating from friends on Letterboxd",
    "permissions": [
      "activeTab",
      "*://*.letterboxd.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://letterboxd.com/film/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icons/icon.png"
    }
  }
  